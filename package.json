{
	"name": "littlewing-monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"setup-hooks": "bun simple-git-hooks",
		"lint": "oxlint --type-check --type-aware",
		"lint:fix": "oxlint --type-check --type-aware --fix",
		"fmt": "oxfmt",
		"fmt:check": "oxfmt --check",
		"test": "bun run --cwd packages/littlewing test",
		"build": "bun run --cwd packages/littlewing build"
	},
	"devDependencies": {
		"oxfmt": "^0.35.0",
		"oxlint": "^1.50.0",
		"oxlint-tsgolint": "^0.15.0",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run fmt:check && bun run lint"
	}
}
